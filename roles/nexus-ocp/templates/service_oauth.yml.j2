kind: Service
apiVersion: v1
metadata:
  name: "{{ _nexus_name }}"
  namespace: "{{ _nexus_namespace }}"
  labels:
    app: "{{ _nexus_name }}"
spec:
  selector:
    app: "{{ _nexus_name }}"
  ports:
  - name: nexus
    protocol: TCP
    port: 4180
    targetPort: 4180
  sessionAffinity: None
  type: ClusterIP