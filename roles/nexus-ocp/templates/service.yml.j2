kind: Service
apiVersion: v1
metadata:
  name: "{{ _nexus_name }}"
  namespace: "{{ _nexus_namespace }}"
  labels:
    app: "{{ _nexus_name }}"
spec:
  selector:
    app: "{{ _nexus_name }}"
  ports:
  - name: nexus
    protocol: TCP
{% if _nexus_oauth|bool %}
    port: 4180
    targetPort: 4180
{% else %}
    port: 8081
    targetPort: 8081
{% endif %}
  - name: docker
    protocol: TCP
    port: 8082
    targetPort: 8082
  sessionAffinity: None
  type: ClusterIP